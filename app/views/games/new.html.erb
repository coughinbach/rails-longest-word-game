<div class="box">
  <div class="header">
    <h1>do you want to play a <i>game</i>?</h1>
    <br>
    <h2>find the longest word you can in the letters below:</h2>
  </div>
  <div class="letters">
    <% @letters.each do |letter|%>
      <div class="letter">
        <p><%= letter.upcase %></p>
      </div>
    <% end %>
  </div>
  <div class="form">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="guess" placeholder="what's your best guess?" class="form-bar">
      <input type="submit" value="submit" class="btn-form">
    </form>
  </div>
</div>

