<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<div class="letters">
  <% @letters.each do |letter|%>
    <div class="letter">
      <p><%= letter.upcase %></p>
    </div>
  <% end %>
</div>

<div class="form">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="guess" placeholder="what's your best guess?">
    <input type="submit" value="play!" class="btn btn-default">
  </form>
</div>
